[MASTER]
# Allow black/isort to handle formatting, pylint focuses on logic & structure
ignore=venv
jobs=1
persistent=yes
extension-pkg-whitelist=pygame

[MESSAGES CONTROL]
# Disable noisy or irrelevant checks
disable=
    C0114,  # missing-module-docstring
    C0115,  # missing-class-docstring
    C0116,  # missing-function-docstring
    R0902,  # too-many-instance-attributes (acceptable for Game class)
    R0903,  # too-few-public-methods (acceptable for simple data classes/entities)
    E1101,  # no-member (pygame false positives)

[FORMAT]
max-line-length=88
indent-string='    '

[DESIGN]
max-args=6
max-locals=15
max-branches=12
max-statements=50

[REPORTS]
output-format=colorized
reports=no
score=yes

[TYPECHECK]
ignored-modules=pygame
